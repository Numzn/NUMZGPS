# =========================================================================
# NumzTrak Frontend Environment Variables (Production / Netlify)
# =========================================================================
# Configuration for Netlify-hosted frontend to connect to Oracle Cloud backend
# Domain sharing: Frontend (app.numz.site) â†’ Backend (api.numz.site)
# =========================================================================

# ========================================
# Backend API Configuration
# ========================================
# Base URL for all API calls from frontend
# Points to your nginx reverse proxy on Oracle Cloud

VITE_API_BASE_URL=https://api.numz.site

# ========================================
# Traccar API Configuration
# ========================================
# These are constructed from VITE_API_BASE_URL in the frontend code

VITE_TRACCAR_API_URL=https://api.numz.site/api/traccar
VITE_TRACCAR_SOCKET_URL=https://api.numz.site/api/socket

# ========================================
# Fuel API Configuration
# ========================================
# Fuel microservice endpoints

VITE_FUEL_API_URL=https://api.numz.site/api/fuel-requests
VITE_FUEL_SOCKET_IO_URL=https://api.numz.site

# ========================================
# Environment Detection
# ========================================
# Set to 'false' for production (Netlify will use VITE_API_BASE_URL)

VITE_LOCAL_DEV=false

# ========================================
# Feature Flags
# ========================================
# Enable/disable specific features

VITE_FEATURE_SOUND_ALERTS=true
VITE_FEATURE_REAL_TIME_UPDATES=true
VITE_FEATURE_FUEL_REQUESTS=true

# ========================================
# Logging Configuration
# ========================================
# For production, keep at 'warn' or 'error'

VITE_LOG_LEVEL=warn

# ========================================
# App Metadata
# ========================================

VITE_APP_NAME=NUMZTRAK
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Professional Fleet Management System