# NumzTrak Fleet Management System - Environment Template
# Copy this file to .env and update with your actual passwords
# DO NOT COMMIT .env TO GIT - It contains sensitive information

# ===========================================
# DATABASE PASSWORDS
# ===========================================

# MySQL Database (Traccar)
MYSQL_ROOT_PASSWORD=NumzTrak2025Root
MYSQL_DATABASE=traccar
MYSQL_USER=traccar
MYSQL_PASSWORD=traccar123

# PostgreSQL Database (Fuel Management)
POSTGRES_PASSWORD=NumzFuel2025

# ===========================================
# TRACCAR CONFIGURATION
# ===========================================

TRACCAR_ADMIN_USER=admin
TRACCAR_ADMIN_PASSWORD=admin123

# ===========================================
# APPLICATION SECRETS
# ===========================================

# Session secret for fuel-api
SESSION_SECRET=NumzTrak2025FuelSecret

# JWT Secret (if used)
JWT_SECRET=NumzTrak2025JWTSecretKey

# Encryption Key (if used)
ENCRYPTION_KEY=NumzTrak2025EncryptionKey

# ===========================================
# NETWORK SETTINGS
# ===========================================

# Traccar HTTP/HTTPS Ports
HTTP_PORT=8082
HTTPS_PORT=8443

# GPS Protocol Port Range (individual ports configured in docker-compose.yml)
# Ports: 5001, 5002, 5003, 5005, 5006, 5009, 5013, 5020, 5055

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Fuel API Settings
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3002

# Frontend Settings
VITE_HMR_HOST=localhost
VITE_HMR_PORT=3002

# ===========================================
# LOGGING
# ===========================================

LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_COUNT=5
